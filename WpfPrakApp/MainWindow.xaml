<Window x:Class="WpfPrakApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPrakApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" x:Name="FullFrame" NavigationUIVisibility="Hidden"/>
        <Frame Grid.Column="0" Grid.Row="2" x:Name="MenuFrame" NavigationUIVisibility="Hidden"/>
        <Frame Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
