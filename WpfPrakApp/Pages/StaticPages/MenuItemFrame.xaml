<Page x:Class="WpfPrakApp.Pages.StaticPages.MenuItemFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPrakApp.Pages.StaticPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="160"
      Title="MenuItemFrame">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Button x:Name="EmloyeesBtn" Height="30" Margin="5 2.5" Content="Сотрудники" Click="EmloyeesBtn_Click"/>
            <Button x:Name="SalesBtn" Height="30" Margin="5 2.5" Content="Продажи"/>
            <Button x:Name="PaymentsBtn" Height="30" Margin="5 2.5" Content="Выплаты"/>
            <Button x:Name="AutoBtn" Height="30" Margin="5 2.5" Content="Авто"/>
            <Button x:Name="DivisionsBtn" Height="30" Margin="5 2.5" Content="Отделы"/>
            <Button x:Name="PositionsBtn" Height="30" Margin="5 2.5" Content="Должности"/>
            <Button x:Name="Отчёты" Height="30" Margin="5 2.5" Content="Отчёты"/>
        </StackPanel>
        <Button Grid.Row="1" Margin="5" x:Name="BackBtn" Content="Назад" Click="BackBtn_Click"/>
    </Grid>
</Page>
