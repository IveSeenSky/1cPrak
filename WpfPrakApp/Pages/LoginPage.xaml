<Page x:Class="WpfPrakApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPrakApp.Pages"
      xmlns:colors="clr-namespace:WpfPrakApp.Recources"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Margin="5 0" Text="Логин"/>
            <TextBox x:Name="LoginBx"  Margin="5 0" Text="{Binding UserLogin}"/>
            <TextBlock Margin="5 0" Text="Пароль"/>
            <TextBox x:Name="PswrdBx" Margin="5 0" Text="{Binding UserPassword}"/>
            <Button x:Name="LoginButton" Content="Войти" Margin="5" Click="LoginButton_Click"/>
            <TextBlock x:Name="ErrorTxtBl" Margin="5 0" Text=" " Foreground="IndianRed"/>
        </StackPanel>
    </Grid>
</Page>
